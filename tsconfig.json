{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@Components/*": ["src/components/*"],
      "@Components": ["src/components"],
      "@Public": ["public/*"],
      "@Utils/*": ["src/utils/*"],
      "@Utils": ["src/utils"],
      "@Pages/*": ["pages/*"],
      "@Generated": ["generated"],
      "@Test": ["./test"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out",
    "next.config.js",
    ".babelrc",
    "bundles",
    "coverage"
  ],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
